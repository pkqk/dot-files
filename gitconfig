[core]
  excludesfile = ~/.gitignore
  quotepath = false
[user]
  name = Adam Sven Johnson
  email = adam@pkqk.net
  signingkey = ssh-rsa 
[gpg]
  format = ssh
[gpg "ssh"]
  program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"
[commit]
  gpgsign = true
[push]
  default = upstream
[alias]
  st = status
  ci = commit
  cia = commit -a
  co = checkout
  cob = checkout -b
  d = diff
  g = grep -in --color=auto
  ff = pull --ff-only
  fsp = !git stash && git ff && git stash pop
  hist = log --color --pretty=format:\"%C(yellow)%h%C(reset) %s%C(bold red)%d%C(reset) %C(green)%ad%C(reset) %C(blue)[%an]%C(reset)\" --relative-date --decorate
  graph = log --color --graph --pretty=format:\"%C(yellow)%h%C(reset) %s%C(bold red)%d%C(reset) %C(green)%ad%C(reset) %C(blue)[%an]%C(reset)\" --relative-date --decorate
  fixup = !GIT_SEQUENCE_EDITOR=true git rebase -i --autosquash --autostash
  cleanup = "!git branch -v | awk '{ if($3 == \"[gone]\") print $1}' | xargs -n 1 git branch -d"
[color]
  branch = auto
  diff = auto
  status = auto
  interactive = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[web]
  browser = open
[branch]
	autosetupmerge = true
[status]
  submodulesummary = true
[rebase]
	autosquash = true
[merge]
	conflictstyle = diff3
[rerere]
	enabled = 1
[fetch]
	prune = true
[pull]
	rebase = true
[url "ssh://git@github.com/"]
	insteadOf = https://github.com/
[url "git@github.com:movio/"]
  insteadOf = movio:
[url "git@github.com:pkqk/"]
  insteadOf = pkqk:
[init]
	defaultBranch = main
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
